/* pages/book-detail/book-detail.wxss */
.container{
  width: 100%;
}
.line{
  height: 20rpx;
  background: #eee;
}
.header{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;

}
.header image{
  width: 200rpx;
  height: 300rpx;
  margin-top:40rpx;

}
.header .title{
  font-size: 36rpx;
  margin-top:30rpx;

}
.header .author{
  margin:10rpx 0 40rpx 0;
  color:gray;
  
}
.short-comment{
  width: 690rpx;
  margin: 0 auto;
  margin-top:40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 .short-comment .content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top:20rpx;
  padding-bottom: 20rpx;
}
.content .give{
 margin-left:10rpx;
 
}

.content-validity .content{
  padding-bottom: 40rpx;
}
.content-validity {
   width: 690rpx;
  margin: 0 auto;
    margin-top:40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content-validity .content text{
  padding: 0 30rpx;
  letter-spacing:2rpx;
  margin: 10rpx;
  color: rgb(46, 46, 46);
  font-size:24rpx;
  text-align: center;
}
.book-message{
   width: 690rpx;
  margin: 0 auto;
  margin-top:40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 140rpx;
}
.book-message .content text{
  color: rgb(46, 46, 46);
  font-size:24rpx;

}
.book-message .content{
  width: 690rpx;
  display: flex;
  margin-top:20rpx;
  flex-direction: row;
  font-size:24rpx;

}
.book-message .content-left,.content-right{
  display: flex;
  flex-direction: column;

}
.book-message .content-right{
  margin-left:40rpx;

}
.book-message .content .content-left{
   align-items:flex-end;
}
.footer-container{
  width: 100%;
  position: fixed;
  background: white;
  z-index: 999;
  bottom: 0;
}
.footer-container .content{
  width: 690rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding-bottom: 20rpx;

}
.footer-container .content .title{
 font-size:24rpx;
 margin:20rpx;


}
.footer-container .tag-wrap{
   display: flex;
   flex-direction:row;
  flex-wrap: wrap;

}
.footer-container .content input{
   text-align: center;
   background: rgb(247, 247, 247);
   width: 408rpx;
   height: 70rpx;
   border: 1px solid rgb(207, 207, 207);
   border-radius: 35rpx;
}

.footer{
  width: 100%;
  margin: 0 auto;
  background: white;
  height:100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.footer .share{
  width: 28rpx;
  height: 28rpx;
}

.footer .fake{
   background: rgb(247, 247, 247);
   padding: 10rpx;
   width: 408rpx;
   height:50rpx;
   color: gray;
   border: 1px solid rgb(207, 207, 207);
   border-radius: 35rpx;
}
