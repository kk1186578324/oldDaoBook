/* pages/book-detail/book-detail.wxss */
.container{
  width: 100%;
}
.line{
  height: 20rpx;
  background: #eee;
}
.header{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;

}
.header image{
  width: 200rpx;
  height: 300rpx;
  margin-top:40rpx;

}
.header .title{
  font-size: 36rpx;
  margin-top:30rpx;

}
.header .author{
  margin:10rpx 0 40rpx 0;
  color:gray;
  
}
.short-comment{
  width: 690rpx;
  margin: 0 auto;
  margin-top:40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.short-comment .content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  

}
.short-comment .content text{
  margin: 10rpx;
  color: gray;
  font-size:24rpx;
  padding:10rpx 20rpx;
  background: rgb(247, 247, 247);
  border-radius: 40rpx;

}
.content-validity .content{
  padding-bottom: 40rpx;
}
.content-validity {
   width: 690rpx;
  margin: 0 auto;
    margin-top:40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content-validity .content text{
  padding: 0 30rpx;
  letter-spacing:2rpx;
  margin: 10rpx;
  color: rgb(46, 46, 46);
  font-size:24rpx;
  text-align: center;
}
.book-message{
   width: 690rpx;
  margin: 0 auto;
  margin-top:40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 140rpx;
}
.book-message .content text{
  color: rgb(46, 46, 46);
  font-size:24rpx;

}
.book-message .content{
  width: 690rpx;
  display: flex;
  margin-top:20rpx;
  flex-direction: row;
  font-size:24rpx;

}
.book-message .content-left,.content-right{
  display: flex;
  flex-direction: column;

}
.book-message .content-right{
  margin-left:40rpx;

}
.book-message .content .content-left{
   align-items:flex-end;
}
.footer{
  width: 690rpx;
  margin: 0 auto;
  position: fixed;
  z-index: 999;
  bottom: 0;
  background: white;
  left:40rpx;
  padding-bottom:20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.footer input{
     text-align: center;
   background: rgb(247, 247, 247);
   width: 408rpx;
   height: 70rpx;
   border: 1px solid rgb(207, 207, 207);
   border-radius: 35rpx;
}
