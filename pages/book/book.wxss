/* pages/book/book.wxss */
.search-container{
  position: fixed;
  display: flex;
  flex-direction:column;
  align-items: center;
  top:0;
  width:100%;

}
.search-container input{
   text-align: center;
   background: rgb(247, 247, 247);
   margin: 0 auto;
   width: 690rpx;
   height: 70rpx;
   border: 1px solid rgb(247, 247, 247);
   border-radius: 35rpx;

}
.search-container image{
  position: relative;
  z-index: 999;
  top:-50rpx;
  left:-120rpx;
  width: 28rpx;
  height: 28rpx;
}
.title-header{
  margin-top:100rpx;
  display: flex;
  justify-content:center;
}
.title-header text{
  color: rgb(66, 66, 66);
  
}
