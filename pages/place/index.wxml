<view class="container">
<view class="weui-cells weui-cells_after-title bg">
  <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">请选择收货地址</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </navigator>

</view>
  <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd msg-title">商品信息</view>
            </view>
   </view> 
   <view class="cart-wrap">

  <block wx:for="{{carts}}" wx:key="{{index}}" >
  <v-orderlist cart="{{item}}" carts="{{carts}}" index="{{index}}" data-index="{{index}}" allPrice = "{{allPrice}}" bindaddPrice="addPrice"  bindreducePrice="reducePrice" binddelData="delData" allChecked="{{allChecked}}" bindtouchstart="touchstart" bindtouchmove="touchmove" hidChecked="{{true}}"/>
  </block>
  </view> 
  <view class="footer">
  <view class='check-all'>
  <checkbox bindtap='allCheck' checked='{{util.checked(carts)}}'></checkbox>
  <text>全选</text>
  </view>
  <view>合计：{{allPrice}}</view>
  <view class="all" bindtap='settlement'>去结算</view>
  </view>
 </view>

   